---
import Image from "../components/Image.astro";
import { writing } from "../misc/data";
import { slugify } from "../misc/fns";
import CardSubtitle from "./CardSubtitle.astro";
import CardTitle from "./CardTitle.astro";
import Hyperlink from "./Hyperlink.astro";
import SectionHeader from "./SectionHeader.astro";

const imageHeight = 40;
---

<section data-grid>
  <SectionHeader heading="Writing" />

  <ul data-list>
    {
      writing.map(({ title, subtitle }) => (
        <li data-list-item>
          <Hyperlink href={slugify(title)} nounderline>
            <div data-card>
              <Image
                classname="banner"
                src={`https://avatar.vercel.sh/${slugify(
                  title
                )}?size=${imageHeight}`}
                alt={title}
                height={imageHeight}
              />
              <CardTitle title={title} />
              <CardSubtitle subtitle={subtitle} />
            </div>
          </Hyperlink>
        </li>
      ))
    }
  </ul>
</section>

<style>
  [data-list-item] a {
    text-decoration: none;
  }

  [data-list-item] [data-card] {
    grid-template-columns: 40px 1fr;
    align-items: center;

    [data-subtitle] {
      grid-column: 1/-1;
    }
  }
</style>
