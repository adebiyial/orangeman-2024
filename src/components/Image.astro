---
interface Props {
  classname?: string;
  src: string;
  alt: string;
  height?: number;
}
const { classname, src, alt, height = "auto" } = Astro.props;
---

<picture class={classname}>
  <img src={src} alt={alt} />
</picture>

<style
  define:vars={{
    height: `${typeof height === "string" ? height : `${height}px`}`,
  }}
>
  img {
    border-radius: 4px;
    display: block;
    width: 100%;
    height: var(--height);
    max-width: 100%;
    object-fit: cover;
  }
</style>
