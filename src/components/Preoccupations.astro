---
import Image from "../components/Image.astro";
import { preoccupations } from "../misc/data";
import { slugify } from "../misc/fns";
import CardSubtitle from "./CardSubtitle.astro";
import CardTitle from "./CardTitle.astro";
import Hyperlink from "./Hyperlink.astro";
import SectionHeader from "./SectionHeader.astro";

const imageHeight = 25;
---

<section data-grid>
  <SectionHeader heading="Preoccupations" />

  <ul data-list>
    {
      preoccupations.map(({ title, subtitle, url, isExternal }) => (
        <li data-list-item>
          <Hyperlink href={slugify(title)} nounderline>
            <div data-card>
              <Image
                classname="banner"
                src={`https://avatar.vercel.sh/${slugify(
                  title
                )}?size=${imageHeight}`}
                alt={title}
                height={imageHeight}
              />
              <CardTitle
                title={title}
                href={url}
                target={isExternal ? "_blank" : "_self"}
              />
              <CardSubtitle subtitle={subtitle} />
            </div>
          </Hyperlink>
        </li>
      ))
    }
  </ul>
</section>
