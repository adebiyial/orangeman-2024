---
import { getPathnames } from "../misc/fns";
import Hyperlink from "./Hyperlink.astro";

const pathnames = getPathnames(Astro.url.pathname);
---

<ul class="breadcrumbs" data-list>
  {
    pathnames.map((path, i) => {
      return (
        <li data-list-item>
          {i === pathnames.length - 1 ? (
            <span data-subtitle>{path}</span>
          ) : (
            <Hyperlink
              nounderline
              href={path.toLowerCase() === "index" ? "/" : `/${path}`}
            >
              {path}
            </Hyperlink>
          )}
        </li>
      );
    })
  }
</ul>

<style>
  .breadcrumbs {
    font-weight: 600;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    /* gap: calc(var(--gap) + 1px); */
    bottom: var(--gap-2x);
    bottom: 100px;
    position: fixed;
    margin: 0;
    border-radius: 34px;
    z-index: 1;
    height: 48px;
    background: #1e3726;
    background: var(--bg);
    border: 2px solid var(--green-fade);
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);

    [data-subtitle],
    a {
      font-size: 15px;
    }

    [data-list-item] {
      position: relative;
      height: 100%;

      &:not(:first-child)::before {
        content: "";
        position: absolute;
        left: 0;
        height: 50%;
        transform: translateX(-3px) rotate(12deg) translateY(-50%);
        width: 2px;
        background-color: #ff6d00;
        top: 50%;
      }

      > * {
        font-size: 15px;
        height: 100%;
        display: flex;
        align-items: center;
        padding-inline: var(--gap-2x);
      }
    }
  }
</style>
