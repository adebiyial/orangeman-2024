---
interface Props {
  heading: string;
  subheading?: string | number;
  symbol?: string;
  date?: string;
}

const { heading, subheading, symbol, date } = Astro.props;
---

<header>
  <h2>{heading}</h2>
  <strong>
    {symbol && <span data-comment>{symbol}</span>}
    {subheading}
  </strong>
  {
    date && (
      <time datetime={date} data-subtitle>
        {date}
      </time>
    )
  }
</header>

<style>
  header {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    line-height: 1;
    gap: var(--gap);
    margin-block-end: var(--gap-3x);

    h2 {
      font-size: 18px;
    }

    *:nth-child(2) {
      margin-left: auto;
    }

    time {
      font-weight: 600;
    }
  }
</style>
