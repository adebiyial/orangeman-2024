---
import Image from "../components/Image.astro";
import { playground } from "../misc/data";
import { slugify } from "../misc/fns";
import CardSubtitle from "./CardSubtitle.astro";
import CardTitle from "./CardTitle.astro";
import SectionHeader from "./SectionHeader.astro";
---

<section data-grid>
  <SectionHeader
    heading="Playground"
    subheading="Where I fail repeatedly, but where things eventually get made."
  />

  <ul data-card>
    {
      playground.map(({ title, subtitle, url, isExternal }) => (
        <li>
          <Image
            classname="banner"
            src={`https://avatar.vercel.sh/${slugify(title)}?size=20`}
            alt={title}
            height={20}
          />
          <CardTitle
            title={title}
            href={url}
            target={isExternal ? "_blank" : "_self"}
          />
          <CardSubtitle subtitle={subtitle} />
        </li>
      ))
    }
  </ul>
</section>
