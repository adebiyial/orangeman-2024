---
import { projects } from "../misc/data";
import { slugify } from "../misc/fns";
import Card from "./Card.astro";
import Hyperlink from "./Hyperlink.astro";
import SectionHeader from "./SectionHeader.astro";

const imageHeight = 40;
---

<section data-grid>
  <SectionHeader heading="Projects" />

  <ul data-list>
    {
      projects.map(({ title, subtitle, url }) => (
        <li data-list-item>
          <Hyperlink href={url as string} target="_blank" nounderline>
            <Card
              {...{
                title,
                subtitle,
                imageUrl: `https://avatar.vercel.sh/${slugify(
                  title
                )}?size=${imageHeight}`,
                imageHeight,
              }}
            />
          </Hyperlink>
        </li>
      ))
    }
  </ul>
</section>

<style>
  [data-list-item] {
    > a {
      text-decoration: none;
    }

    [data-card] {
      grid-template-columns: 40px 1fr;
      align-items: center;

      [data-subtitle] {
        grid-column: 1/-1;
      }
    }
  }
</style>
