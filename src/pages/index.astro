---
import Hyperlink from "../components/Hyperlink.astro";
import Intro from "../components/Intro.astro";
import PageHeader from "../components/PageHeader.astro";
import Playground from "../components/Playground.astro";
import Projects from "../components/Projects.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Writing from "../components/Writing.astro";
import Root from "../layouts/Root.astro";
import links from "../misc/links";

const title = "Adebiyi Adedotun";
const occupation = "Design & Frontend Engineer.";
---

<Root title={title}>
  <div data-grid data-grid-col="3" data-layout-center>
    <article data-prose>
      <PageHeader
        heading={title}
        subheading={occupation}
        symbol="//"
        spacey={false}
      />
      <Intro />
      <hr />
      <Projects />
      <Writing />
      <hr />
      <Playground />
      <hr />
      <!-- <section data-grid>
        <SectionHeader heading="Et Cetera" />
        <p>
          In a previous life, I used to be a dotNET developer. Then something
          something came along the web.
        </p>
        <p>
          Whenever I'm not coding or writing I'm often reading, improving my
          illustrating skill, or learning and creating data visualizations with
          D3.js.
        </p>
      </section> -->
      <section data-grid>
        <SectionHeader heading="ColorÃ­n Colorado" />
        <p>
          Don't be a stranger. Connect with me on
          {
            Object.entries(links.socials)
              .filter(([key]) => key !== "mail")
              .map(([_, value], index, arr) => (
                <>
                  <Hyperlink target="_blank" href={value.href}>
                    {value.title}
                  </Hyperlink>
                  {index < arr.length - 1 && "/"}
                </>
              ))
          }
        </p>
      </section>
    </article>
  </div>
</Root>

<style>
  [data-prose] {
    > *:not(header) {
      margin-block: 0 var(--gap-6x);
    }

    [data-list] {
      display: flex;
      column-gap: var(--gap-2x);
      overflow-x: auto;
      --no-of-items: 3;
      margin: 0;

      @media screen and (max-width: 43rem) {
        padding-bottom: var(--gap-2x);
      }

      [data-list-item] {
        display: inherit;
        flex: 1;

        a {
          width: calc(
            (var(--content-width) / var(--no-of-items)) - var(--gap-2x)
          );
        }
      }
    }
  }
</style>
