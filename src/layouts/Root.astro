---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --font-fallback: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    --page-width: 67rem;
    --content-width: 40rem;
    --font-display: "Bricolage Grotesque 72pt", var(--font-fallback);
    --font-body: "Bricolage Grotesque 72pt", var(--font-fallback);
    --font-sans: var(--font-body);
    /* font-serif */
    --font-mono: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    --gap-s: 0.25rem;
    --leading: 1.75rem;
    --text: 1rem;
    --type: var(--text) / var(--leading) var(--font-body);
    --type-body: var(--type);
  }
  @media (prefers-color-scheme: dark) {
    :root {
      color-scheme: dark;
      --bg: #0b0f0b;
      --fg: #d7d7db;
      /* text-transform: uppercase; */
    }
  }
  * {
    scrollbar-width: thin;
    scrollbar-color: #1e3726 transparent;
  }
  *,
  ::after,
  ::before {
    box-sizing: border-box;
  }
  html {
    font-size: 1rem;
  }
  html,
  body {
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    touch-action: manipulation;

    height: 100%;
  }
  body {
    font-family: var(--font-sans);
    background: var(--bg);
    color: var(--fg);
    margin: 0;
    overflow-x: hidden;
    overflow-y: scroll;
  }
  b,
  strong {
    font-weight: bolder;
  }
  code,
  kbd,
  pre,
  samp {
    font-family: var(--font-mono);
    font-size: 1em;
  }
  sub,
  sup {
    font-size: 60%;
    line-height: 0;
    position: relative;
    vertical-align: baseline;
  }
  sub {
    bottom: -0.25em;
  }
  sup {
    top: -0.5em;
  }
  button,
  input,
  optgroup,
  select,
  textarea {
    font-family: inherit;
    font-size: 100%;
    line-height: 1.15;
    margin: 0;
  }
  svg {
    shape-rendering: auto;
    vertical-align: middle;
  }
  blockquote,
  figure {
    margin: 0;
  }
  a {
    color: inherit;
  }
</style>
