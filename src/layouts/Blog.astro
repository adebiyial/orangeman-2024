---
import PageHeader from "../components/PageHeader.astro";
import PageNav from "../components/PageNav.astro";
import type { BlogPostFrontmatter } from "../misc/types";
import Root from "./Root.astro";

const posts = await Astro.glob<BlogPostFrontmatter>("../pages/weblog/*.mdx");

const isBlogPage = posts.some(
  (p) => p.url?.replaceAll("/", "") === Astro.url.pathname.replaceAll("/", "")
);

let toc;

if (isBlogPage) {
  const currentPost = posts.filter((p) => {
    return (
      p.url?.replaceAll("/", "") === Astro.url.pathname.replaceAll("/", "")
    );
  })[0];
  const headings = currentPost.getHeadings();

  toc = headings.map((heading) => ({
    title: heading.text,
    href: heading.slug,
    depth: heading.depth,
  }));
}

const {
  frontmatter: { title, date },
} = Astro.props;
---

<Root title={title}>
  <div data-grid data-grid-col="3" data-layout-center>
    <PageNav toc={toc} />
    <main data-grid>
      <PageHeader heading={title} subheading={date} symbol="#" />
      <article>
        <slot />
      </article>
    </main>
  </div>
</Root>

<style>
  article {
    display: grid;
    gap: 24px 0;
    --leading: 1.9;

    h2 {
      width: fit-content;
      margin-top: var(--gap-2x);
    }

    ul {
      display: grid;
      gap: var(--gap);
      line-height: var(--leading);
      padding: 0;
      margin: 0;
    }

    pre {
      padding: 1rem;
      border-radius: 4px;
      outline: 1px solid var(--green-fade);
      line-height: 1.8;
      font-weight: 600 !important;
      background: transparent !important;
      font-size: 14px;
      margin: 0;
    }

    code:not(pre code) {
      font-weight: 600 !important;
      font-size: 14px;
      padding: 0px var(--gap-s);
      border-radius: 4px;
      background: var(--green-fade);
      border: 1px solid #1e3726;
      text-align: left;
      box-decoration-break: clone;
    }
  }
</style>
